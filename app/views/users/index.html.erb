<html>
    <body>
        <main>
            <div class="container px-5 px-sm-0">
                <div class="row">
                    <!--左側-->
                    <%= render 'books/list', user: @User, book: @book %>
                    <!--左側終-->
                    <div class="col-md-8 offset-md-1">
                        <h2>Users</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>image</th><th>name</th><th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @Users.each do |user| %>
                                <tr>
                                    <td><%= link_to user_path(@User) do %><%= attachment_image_tag user, :profile_image , size: "50x50" , fallback: "no_image.jpg" %><% end %></td>
                                    <td><%= user.name %></td>
                                    <td><%= link_to "Show", user_path(user.id) %></td>
                                    <% end %>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>