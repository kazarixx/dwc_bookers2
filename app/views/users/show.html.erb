<html>
    <body>
        <main>
            <div class="container px-5 px-sm-0">
                <div class="row">
                    <!--左側-->
                    <%= render 'books/list', user: @User, book: @book %>
                    <!--左側終-->
                    <div class="col-md-8 offset-md-1">
                        <h2>Books</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th></th><th>Title</th><th>Opinion</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @Books.each do |book| %>
                                <tr>
                                    <td><%= link_to user_path(@User) do %><%= attachment_image_tag @User, :profile_image , size: "50x50" %><% end %></td>
                                    <td><%= link_to book.title, book_path(book.id) %></td>
                                    <td><%= book.body %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>