<% if @model == 'user'%>
 <h3>Users serch for "<%= @content %>"</h3>
 <%= render 'users/index', users: @records %>
<% elsif @model =='book'%>
<h3>Users serch for "<%= @content %>"</h3>
<table class="table">
 <thead>
  <tr>
   <th></th><th>Title</th><th>Opinion</th>
  </tr>
 </thead>
 <tbody>
  <% @records.each do |book| %>
  <tr>
   <td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user,:profile_image, size: "50x50" ,fallback: "no_image.jpg"%><% end %></td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
  </tbody>
 </table>
<% end %>